{
  "firestore": {
    "database": "(default)",
    "location": "asia-northeast1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/problem",
        "function": "problem"
      },
      {
        "source": "/api/answer",
        "function": "answer"
      },
      {
        "source": "/api/reset",
        "function": "reset"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}