{
  "firestore": {
    "database": "(default)",
    "location": "asia-northeast1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/problem",
        "function": {
          "functionId": "problem",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/api/answer",
        "function": {
          "functionId": "answer",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/api/reset",
        "function": {
          "functionId": "reset",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/api/admin/stats",
        "function": {
          "functionId": "adminStats",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/api/admin/resetStats",
        "function": {
          "functionId": "adminResetStats",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/api/changeNickname",
        "function": {
          "functionId": "changeNickname",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/api/choiceVote",
        "function": {
          "functionId": "choiceVote",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/api/choiceResult",
        "function": {
          "functionId": "choiceResult",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}